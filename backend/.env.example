# Database Configuration (AWS RDS PostgreSQL)
DATABASE_URL=postgresql+asyncpg://username:password@your-rds-endpoint.region.rds.amazonaws.com:5432/order_receiver

# Security Configuration
SECRET_KEY=your-super-secret-key-here-at-least-32-characters
JWT_LIFETIME_SECONDS=3600

# CORS Configuration (add your frontend domains)
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-app-domain.com

# Application Settings
DEBUG=false
ENVIRONMENT=production

# AWS Configuration (if using other AWS services)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Optional: Redis for caching (AWS ElastiCache)
REDIS_URL=redis://your-elasticache-endpoint:6379

# Platform Integration (remove if not needed)
CENTRALIZED_PLATFORM_URL=https://your-platform-api.com
CENTRALIZED_PLATFORM_API_KEY=your-platform-api-key
CENTRALIZED_PLATFORM_WEBHOOK_SECRET=your-webhook-secret
