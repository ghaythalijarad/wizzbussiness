# Merchant App Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/order_receiver_db

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_LIFETIME_SECONDS=3600

# App Settings
DEBUG=True
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Centralized Platform Integration
# These will be updated when the platform is deployed
CENTRALIZED_PLATFORM_URL=https://your-platform.com
CENTRALIZED_PLATFORM_API_KEY=your-secure-api-key
CENTRALIZED_PLATFORM_WEBHOOK_SECRET=webhook-secret-for-verification

# Platform Communication Settings
PLATFORM_TIMEOUT=10
PLATFORM_RETRY_ATTEMPTS=3

# Optional: Email Configuration (for business registration)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# EMAIL_USERNAME=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password

# Optional: SMS Configuration (for order notifications)
# TWILIO_SID=your-twilio-sid
# TWILIO_TOKEN=your-twilio-token
# TWILIO_PHONE=+1234567890
