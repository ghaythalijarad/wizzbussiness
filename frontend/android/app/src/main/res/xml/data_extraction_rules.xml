<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Business app should include preferences but exclude sensitive data -->
        <include domain="sharedpref" path="."/>
        <exclude domain="sharedpref" path="auth_tokens.xml"/>
        <exclude domain="sharedpref" path="api_keys.xml"/>
    </cloud-backup>
    <device-transfer>
        <!-- Allow transfer of business settings but not sensitive data -->
        <include domain="sharedpref" path="."/>
        <exclude domain="sharedpref" path="auth_tokens.xml"/>
        <exclude domain="sharedpref" path="api_keys.xml"/>
    </device-transfer>
</data-extraction-rules>
